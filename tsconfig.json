{
    "compilerOptions": {
        // Basic Settings
        "target": "ES6",
        "jsx": "react",
        "declaration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "./lib",
        // ES Feature
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        // Performance Optimization
        "skipLibCheck": false,
        "removeComments": true,
        // Strong Type Check
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "strict": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": [
        "src"
    ]
}